<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 col-md-4 col-sm-12">
      <%= render "admin/sidebar" %>
    </div>
    <div class="col-lg-10 col-md-8 col-sm-12">
      <%= link_to "New Delivery Date", new_admin_delivery_date_path, class: "btn btn-primary" %>
      <hr>
      <table class="table table-dark table-striped">
        <thead class="thead-dark">
          <tr>
            <th>No</th>
            <th>Delivery Date</th>
            <th colspan="2">Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_dates.each_with_index do |delivery_date,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= delivery_date.date.strftime('%a, %d %b %Y') %></td>
              <td><%= check_delivery_date_status(delivery_date) %></td>
              <td>
                <% if delivery_date.active? %>
                  <%= link_to "Set In Active", mark_inactive_admin_delivery_date_path(delivery_date), method: :patch, remote: true, class: "btn btn-danger btn-sm" %>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                  <%= link_to edit_admin_delivery_date_path(delivery_date), class: "btn btn-success" do %>
                    <i class="fas fa-edit"></i> Edit
                  <% end %>
                  <%= link_to admin_delivery_date_path(delivery_date), method: :delete, data: { confirm: 'Are you sure?', turbolinks: false }, class: "btn btn-danger" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>