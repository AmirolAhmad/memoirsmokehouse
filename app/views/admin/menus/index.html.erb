<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 col-md-4 col-sm-12">
      <%= render "admin/sidebar" %>
    </div>
    <div class="col-lg-10 col-md-8 col-sm-12">
      <%= link_to "Add New", new_admin_menu_path, class: "btn btn-primary" %>
      <hr>
      <table class="table table-dark table-striped">
        <thead class="thead-dark">
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Weight (g)</th>
            <th>Price</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @menus.each_with_index do |menu,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= menu.name %></td>
              <td><%= menu.weight %></td>
              <td><%= number_to_currency(menu.price, unit: "RM") %></td>
              <td><%= menu.instock? ? "In Stock" : "Out of Stock" %></td>
              <td>
                <%= link_to edit_admin_menu_path(menu), class: "btn btn-success btn-sm" do %>
                  <i class="fas fa-edit"></i> Edit
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>